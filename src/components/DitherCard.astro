---
interface Props {
  title?: string
  className?: string
  noPadding?: boolean
}

const { title, className = "", noPadding = false } = Astro.props
---

<div
  class={`group relative bg-cyber-black border border-cyber-border hover:border-cyber-secondary transition-colors duration-300 flex flex-col overflow-hidden ${className}`}
>
  {/* Dither Overlay on Hover */}
  <div
    class="absolute inset-0 bg-dither opacity-10 group-hover:opacity-20 pointer-events-none z-0 transition-opacity duration-300"
  >
  </div>

  {/* Header if provided */}
  {
    title && (
      <div class="relative z-10 flex items-center justify-between px-4 py-3 border-b border-cyber-border bg-cyber-dark">
        <h3 class="text-xs font-bold tracking-widest uppercase text-cyber-secondary group-hover:text-cyber-primary transition-colors">
          {title}
        </h3>
        <div class="text-cyber-muted group-hover:text-cyber-secondary transition-colors">
          <slot name="icon" />
        </div>
      </div>
    )
  }

  {/* Content */}
  <div class={`relative z-10 flex-1 h-full ${noPadding ? "" : "p-5"}`}>
    <slot />
  </div>

  {/* Corner Accents */}
  <div
    class="absolute top-0 left-0 w-1 h-1 bg-cyber-secondary opacity-0 group-hover:opacity-100 transition-opacity"
  >
  </div>
  <div
    class="absolute top-0 right-0 w-1 h-1 bg-cyber-secondary opacity-0 group-hover:opacity-100 transition-opacity"
  >
  </div>
  <div
    class="absolute bottom-0 left-0 w-1 h-1 bg-cyber-secondary opacity-0 group-hover:opacity-100 transition-opacity"
  >
  </div>
  <div
    class="absolute bottom-0 right-0 w-1 h-1 bg-cyber-secondary opacity-0 group-hover:opacity-100 transition-opacity"
  >
  </div>
</div>
