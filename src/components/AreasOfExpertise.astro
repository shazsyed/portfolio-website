---
import { EXPERTISE_DATA } from "../constants"
import { Shield, Target, Cloud, Code, Bug, Search } from "lucide-astro"
---

<div class="flex flex-wrap justify-center gap-3">
    {
        EXPERTISE_DATA.map((item) => (
            <div class="group/item relative">
                {/* Main Chip/Pill */}
                <div class="flex items-center gap-2 px-4 py-2 border border-cyber-border bg-cyber-card hover:border-accent-primary hover:bg-cyber-dark transition-all duration-300 cursor-default">
                    <div class="text-cyber-muted group-hover/item:text-accent-hover transition-colors duration-300">
                        {item.icon === "Shield" && <Shield size={16} />}
                        {item.icon === "Target" && <Target size={16} />}
                        {item.icon === "Cloud" && <Cloud size={16} />}
                        {item.icon === "Code" && <Code size={16} />}
                        {item.icon === "Bug" && <Bug size={16} />}
                        {item.icon === "Search" && <Search size={16} />}
                    </div>
                    <span class="text-sm font-medium text-cyber-secondary group-hover/item:text-cyber-primary transition-colors duration-300 uppercase tracking-wide">
                        {item.title}
                    </span>
                </div>

                {/* Hover Tooltip - Appears Below */}
                <div class="absolute top-[calc(100%+10px)] left-1/2 -translate-x-1/2 w-64 p-3 bg-cyber-black border border-accent-primary shadow-[0_0_15px_var(--accent-glow-hover)] opacity-0 invisible group-hover/item:opacity-100 group-hover/item:visible transition-all duration-300 z-[100] pointer-events-none">
                    <div class="absolute -top-[5px] left-1/2 -translate-x-1/2 w-2 h-2 bg-cyber-black border-l border-t border-accent-primary rotate-45" />
                    <p class="text-xs text-cyber-primary leading-relaxed text-center">
                        {item.description}
                    </p>
                </div>
            </div>
        ))
    }
</div>
