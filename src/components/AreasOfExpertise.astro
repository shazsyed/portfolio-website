---
import { EXPERTISE_DATA } from "../constants"
import { Shield, Target, Cloud, Code, Bug, Search } from "lucide-astro"
---

<div class="grid grid-cols-1 md:grid-cols-3 gap-3">
    {
        EXPERTISE_DATA.map((item) => (
            <div class="relative border border-cyber-border bg-cyber-black overflow-hidden p-4">
                {/* Background Grid/Scanline Effect (Low Opacity) */}
                <div class="absolute inset-0 bg-[linear-gradient(to_right,#80808012_1px,transparent_1px),linear-gradient(to_bottom,#80808012_1px,transparent_1px)] bg-[size:14px_24px] opacity-20" />

                <div class="relative z-10 flex flex-col items-start h-full">
                    <div class="flex items-center space-x-3 mb-2">
                        {/* Icon Container */}
                        <div class="p-2 bg-cyber-dark rounded-full border border-cyber-border">
                            {item.icon === "Shield" && (
                                <Shield size={18} class="text-emerald-400" />
                            )}
                            {item.icon === "Target" && (
                                <Target size={18} class="text-emerald-400" />
                            )}
                            {item.icon === "Cloud" && (
                                <Cloud size={18} class="text-emerald-400" />
                            )}
                            {item.icon === "Code" && (
                                <Code size={18} class="text-emerald-400" />
                            )}
                            {item.icon === "Bug" && (
                                <Bug size={18} class="text-emerald-400" />
                            )}
                            {item.icon === "Search" && (
                                <Search size={18} class="text-emerald-400" />
                            )}
                        </div>

                        {/* Title */}
                        <h3 class="text-base font-bold text-cyber-primary tracking-wide">
                            {item.title}
                        </h3>
                    </div>

                    {/* Description (Always visible) */}
                    <p class="text-sm text-cyber-secondary leading-relaxed pl-1">
                        {item.description}
                    </p>
                </div>
            </div>
        ))
    }
</div>
